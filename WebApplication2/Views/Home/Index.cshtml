@{
    ViewData["Title"] = "Page d'accueil";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="m-0">Prédiction du Prix Immobilier</h2>
        </div>
        <div class="card-body">
            <form id="predictionForm" class="needs-validation" novalidate>
                <div class="row">
                   
                    <div class="col-md-6 mb-3">
                        <label for="Area" class="form-label fw-bold">Superficie (en m²) :</label>
                        <input type="number" id="Area" name="Area" class="form-control" value="0" min="0" required />
                    </div>

                   
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Chambres :</label>
                        <div class="d-flex gap-2">
                            @for (int i = 1; i <= 4; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Bedrooms@i" name="Bedrooms" value="@i" @(i == 1 ? "checked" : "") required />
                                    <label class="form-check-label" for="Bedrooms@i">@i</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                   
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Salles de bain :</label>
                        <div class="d-flex gap-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Bathrooms@i" name="Bathrooms" value="@i" @(i == 1 ? "checked" : "") required />
                                    <label class="form-check-label" for="Bathrooms@i">@i</label>
                                </div>
                            }
                        </div>
                    </div>

                   
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Étages :</label>
                        <div class="d-flex gap-2">
                            @for (int i = 1; i <= 4; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Stories@i" name="Stories" value="@i" @(i == 1 ? "checked" : "") required />
                                    <label class="form-check-label" for="Stories@i">@i</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

              
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Route principale :</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Mainroad" name="Mainroad" value="yes" required />
                            <label class="form-check-label" for="Mainroad">Oui</label>
                        </div>
                        <input type="hidden" name="Mainroad" value="no" />
                    </div>
                   
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Sous-sol :</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Basement" name="Basement" value="yes" required />
                            <label class="form-check-label" for="Basement">Oui</label>
                        </div>
                        <input type="hidden" name="Basement" value="no" />
                    </div>
                </div>

             
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Chauffage à eau chaude :</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Hotwaterheating" name="Hotwaterheating" value="yes" required />
                            <label class="form-check-label" for="Hotwaterheating">Oui</label>
                        </div>
                        <input type="hidden" name="Hotwaterheating" value="no" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Climatisation :</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Airconditioning" name="Airconditioning" value="yes" required />
                            <label class="form-check-label" for="Airconditioning">Oui</label>
                        </div>
                        <input type="hidden" name="Airconditioning" value="no" />
                    </div>
                </div>

               
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Place de parking :</label>
                        <div class="d-flex gap-2">
                            @for (int i = 0; i <= 3; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Parking@i" name="Parking" value="@i" @(i == 0 ? "checked" : "") required />
                                    <label class="form-check-label" for="Parking@i">@i</label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Bon emplacement :</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Prefarea" name="Prefarea" value="yes" required />
                            <label class="form-check-label" for="Prefarea">Oui</label>
                        </div>
                        <input type="hidden" name="Prefarea" value="no" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Chambre d'amis :</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Guestroom" name="Guestroom" value="yes" required />
                            <label class="form-check-label" for="Guestroom">Oui</label>
                        </div>
                        <input type="hidden" name="Guestroom" value="no" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Furnishingstatus" class="form-label fw-bold">État du mobilier :</label>
                        <select id="Furnishingstatus" name="Furnishingstatus" class="form-select" required>
                            <option value="Unfurnished">Non meublé</option>
                            <option value="Semi-Furnished">Semi-meublé</option>
                            <option value="Furnished" selected>Meublé</option>
                        </select>
                    </div>
                </div>
               
               

                <button type="submit" class="btn btn-success w-100 mx-auto d-block">Prédire le prix</button>

            </form>
        </div>
    </div>
</div>



<div id="resultModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Résultat de la prédiction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <p id="predictionResult">Le prix prédit sera affiché ici.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/site.js"></script>
}
